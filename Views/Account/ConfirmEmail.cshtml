@{
    Layout = "/Views/Shared/_SecondLayout.cshtml";
}

<div class="col-lg-4 col-md-6 ml-auto mr-auto">
    <div class="card card-login">
        <div class="card-header ">
            <div class="card-header ">
                <h3 class="header text-center">Login</h3>
            </div>
            <div class="card-body">
            Thank you for confirming your email. Please click below to log in.
            </div>
            <div class="card-footer">
                <button href=" @Url.Action("Login", "Account", routeValues: new { Id = "loginLink" })" class="btn btn-danger btn-round btn-block mb-3">
                    Login
                </button>
            </div>
        </div>
    </div>
</div>

